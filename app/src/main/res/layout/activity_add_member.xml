<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_member"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.acer.app_project.AddMemberActivity"
    android:background="#49CCE4"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffffff"
        android:layout_marginTop="11dp"
        android:layout_height="320dp"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:ems="10"
            android:id="@+id/editText2"
            tools:textColor="#000000"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_below="@+id/spinner"
            android:layout_toRightOf="@+id/textView13" />

        <EditText
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:ems="10"
            android:id="@+id/editText44"
            tools:textColor="#000000"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_alignBaseline="@+id/textView18"
            android:layout_alignBottom="@+id/textView18"
            android:layout_toRightOf="@+id/textView18"
            android:layout_toEndOf="@+id/textView18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:textSize="18sp"
            android:text="โรคประจำตัว"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/editText7"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:text="อีเมล"
            android:layout_below="@+id/editText3"
            android:layout_toLeftOf="@+id/editText2"
            android:layout_toStartOf="@+id/editText2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:text="เบอร์โทร"
            android:textSize="18sp"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="99dp"
            android:layout_alignTop="@+id/relativeLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:textSize="18sp"
            android:id="@+id/spinner"
            android:spinnerMode="dropdown"
            android:entries="@array/sex"
            android:layout_alignTop="@+id/textView10"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2">
        </Spinner>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:text="ชื่อ-สกุล"
            android:textSize="18sp"
            android:layout_alignBaseline="@+id/editText2"
            android:layout_alignBottom="@+id/editText2"
            android:layout_alignRight="@+id/textView10"
            android:layout_alignEnd="@+id/textView10" />

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:ems="10"
            android:id="@+id/editText7"
            tools:textColor="#000000"
            android:layout_alignBaseline="@+id/textView17"
            android:layout_alignBottom="@+id/textView17"
            android:layout_alignLeft="@+id/editText3"
            android:layout_alignStart="@+id/editText3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textSize="18sp"
            android:text="หมายเหตุ"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/editText44"
            android:layout_toLeftOf="@+id/editText44"
            android:layout_toStartOf="@+id/editText44" />

        <EditText
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:ems="10"
            android:id="@+id/editText9"
            tools:textColor="#000000"
            android:layout_alignBaseline="@+id/textView14"
            android:layout_alignBottom="@+id/textView14"
            android:layout_alignLeft="@+id/editText44"
            android:layout_alignStart="@+id/editText44" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/textView10"
            android:text="คำนำหน้า"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textView15"
            android:layout_alignEnd="@+id/textView15" />

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"

            android:inputType="phone"
            android:textSize="18sp"
            android:ems="10"
            android:id="@+id/editText3"
            tools:textColor="#000000"
            android:layout_below="@+id/editText2"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2" />


    </RelativeLayout>

    <Button
        android:text="เพิ่ม"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/button2"
        android:onClick="add" />

</RelativeLayout>
